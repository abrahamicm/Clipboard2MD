{
  "manifest_version": 2,
  "name": "Clipboard2MD2",
  "version": "1.0",
  "description": "Crea archivos Markdown desde texto seleccionado.",
  "permissions": ["contextMenus", "clipboardWrite"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {"48": "icon.png"},
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Haz clic aqu√≠"
  }
}
